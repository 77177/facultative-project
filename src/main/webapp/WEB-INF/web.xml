<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--controllers-->
    <servlet>
        <servlet-name>studentController</servlet-name>
        <servlet-class>com.epam.lab.group1.facultative.controller.StudentController</servlet-class>
    </servlet>

    <!--views-->
    <servlet>
        <servlet-name>teacher</servlet-name>
        <jsp-file>/WEB-INF/view/teacher.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>feedBack</servlet-name>
        <jsp-file>/WEB-INF/view/feedBack.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/view/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>newFeedBack</servlet-name>
        <jsp-file>/WEB-INF/view/newFeedBack.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/WEB-INF/view/register.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>student</servlet-name>
        <jsp-file>/WEB-INF/view/student.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>course</servlet-name>
        <jsp-file>/WEB-INF/view/course.jsp</jsp-file>
    </servlet>

    <!--mapping-->
    <servlet-mapping>
        <servlet-name>studentController</servlet-name>
        <url-pattern>/studentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>teacher</servlet-name>
        <url-pattern>/teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>student</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>feedBack</servlet-name>
        <url-pattern>/feedBack</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newFeedBack</servlet-name>
        <url-pattern>/newFeedBack</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>course</servlet-name>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--welcome-->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>